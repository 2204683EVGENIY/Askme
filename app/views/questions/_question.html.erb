<div class="pre-line mb-sm <%= 'hidden' if question.hidden? %>" >
  <%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>
  <% if current_user == question.user %>
    <div>
      <%= link_to fa_icon('pencil'), edit_question_path(question), title: "Изменить   вопрос" %>
      <%= button_to fa_icon('trash-o'), question_path(question), method: :delete, title: "Удалить вопрос", form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>
      <%= button_to fa_icon('eye'), hide_question_path(question.id), method: :put, title: "Скрыть вопрос", form: {data: {turbo_confirm: 'Точно скрыть вопрос?'}} unless question.hidden? %>
    </div>
  <% end %>
</div>
